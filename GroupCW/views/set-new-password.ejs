<!doctype html>
<html lang="en">

<%- include('header'); -%>

<body>
    <div id="set-new-password">
        <%- include('navbar'); -%>

        <section class="new-password rounded shadowed bordered card">
            <span class="item1 logo">REHEARSAL</span>
            <h2 class="item2 left-aligned">Set New Password</h2>
            <p class="item3 right-aligned">or <a href="sign-in.html">sign in</a></p>
            <div class="item4">
                <label class="input" for="new-password-password1-input">
                    <span class="label">Password</span>
                    <div>
                        <span class="material-symbols-rounded">lock</span>
                        <input type="text" id="new-password-password1-input" v-model="password1">
                    </div>
                </label>
                <p v-if="password1Error" class="input-error error">
                    <span class="material-symbols-rounded">error</span>
                    <span id="new-password-password1-error">{{password1Error}}</span>
                </p>
            </div>
            <div class="item5">
                <label class="input" for="new-password-password2-input">
                    <span class="label">Confirm Password</span>
                    <div>
                        <span class="material-symbols-rounded">lock</span>
                        <input type="text" id="new-password-password2-input" v-model="password2">
                    </div>
                </label>
                <p v-if="password2Error" class="input-error error">
                    <span class="material-symbols-rounded">error</span>
                    <span id="new-password-password2-error">{{password2Error}}</span>
                </p>
            </div>
            <button class="item6 right-aligned" @click="setNewPassword">Set Password</button>
        </section>

</main>
</div>

<%- include('footer'); -%>

<!-- Application Javascript -->
<script defer src="/static/set-new-password.js"></script>

</body>
</html>